<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".LoginFragment">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:id="@+id/icon"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_love"></ImageView>
    <TextView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BETTER"
        android:textSize="60sp"
        android:textColor="#000000"
        android:layout_below="@+id/icon"
        android:gravity="center"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_below="@+id/banner">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_account"></ImageView>
                <EditText
                    android:id="@+id/username_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:hint="username"
                    android:textColor="#000000"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:theme="@style/MyEditText"
                    >
                </EditText>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_key"></ImageView>
                <EditText
                    android:id="@+id/password_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:hint="password"
                    android:textColor="#000000"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:theme="@style/MyEditText"
                    >
                </EditText>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="50dp">
            <Button
                android:id="@+id/login"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:text="Log in"
                android:textColor="@color/color_white"
                android:textSize="20sp"
                android:background="@drawable/button_login"></Button>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="10dp"
            android:text="Not a member? \n Sign up Now!">
        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:gravity="center">
            <Button
                android:id="@+id/register"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:text="Sign Up"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/color_white"
                android:background="@drawable/button_res"></Button>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>